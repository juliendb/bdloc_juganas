
red = #e90000
white = #fff



body
	font 300 2em/2em Oswald
	margin 0
	padding 0
	color #fff
	background url('../img/fond_bd.png') no-repeat 0 0 #000
	background-size cover




/****************************************
*****************************************
************** HEADER *******************
*****************************************
****************************************/		

	
#header
	position relative
	height 81px
	background-color #222222

	
	
#header
	#logo
		position absolute

header
	nav
		line-height 81px
						
header
	nav
		a
			font 300 1em/1em Oswald
			color #fff
			text-transform uppercase
			margin-right 20px
			
#connexion
	&::before
		content "\e008"
			
#header
	#connexion
		display block
		font 300 1em Oswald
		color #fff
		line-height 81px
		text-align right


		
/****************************************
*****************************************
************** MAIN HOME ****************
*****************************************
****************************************/		
		
#location
	display block
	text-align center
	margin-top 8%
	h1
		font 700 2.2em Oswald
		letter-spacing 0.05em
		text-transform uppercase
		color #fff
		text-shadow 2.5px 4.33px 5px rgb( 35, 31, 32 )
	h2
		font 700 2em Oswald
		letter-spacing 0.05em
		text-transform uppercase
		color #fff
		text-shadow 2.5px 4.33px 5px rgb( 35, 31, 32 )
		margin-top -11px
	p
		font 700 1em Oswald
		letter-spacing 0.05em
		text-transform uppercase
		color #fff
		text-shadow 2.5px 4.33px 5px rgb( 35, 31, 32 )

a.subscribe
	display block
	margin 27px auto
	width 158px
	height 55px
	background-color red
	font 700 0.9em Oswald
	letter-spacing 0.07em
	text-transform uppercase
	color white
	line-height 53px
	
.subscribe
	position relative
	&::before
		content ""
		position absolute
		left -10px
		border-left 10px solid transparent
		border-bottom 55px solid red
		
	&::after
		content ""
		position absolute
		right -10px
		border-right 10px solid transparent
		border-top 55px solid red
	






/****************************************
*****************************************
************** FOOTER *******************
*****************************************
****************************************/

#footer
	position absolute
	bottom 0
	width 100%
	margin-top 50px
	margin-bottom 15px
	
#nav
	float left
	margin-left 15px
	
	a
		font 300 0.8em Oswald
		color #999
		margin-right 15px
		

#petitlogo
	position absolute	
	margin 0 auto
	left 45%
	
#copyright
	float right
	margin-right 15px
	margin-top 15px
	p
		font 300 0.8em Oswald
		color #999

		









	


	