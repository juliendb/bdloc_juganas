{% extends "layouts/base.html.twig" %}

{# titre de la page dans head #}
{% block title %} Mon profil | Bdloc {% endblock %}   


{# contenu du body #}

{% block main_content %}
<div class="container profil">
    <h1>Mon compte</h1>

    <div class="boutons">
        <a href="{{ path('bdloc_app_profil_editprofil') }}" class="btn btn-primary">Editer</a>
        <a href="" class="btn btn-danger">Me désabonner</a>
    </div>

<h2>Infos personelles</h2>
    <h3>{{ user.firstname }} {{ user.name }}</h3>
    
    <p><strong>Mail :</strong> {{ user.email }}</p>
    <p><strong>Adress :</strong> {{ user.adress }} - {{ user.postalCode }} {{ user.city }}</p>
    <p><strong>Telephone :</strong>{{ user.tel }}</p>
    <a href="" class="btn btn-warning pull-left">Changer mon mot de passe</a>

<div class="clearfix"></div>

<h2>Mon point relais</h2>

    {% if user.mydelivery %}
        <h3>{{ user.mydelivery.name }}</h3>
        <p><strong>Adress :</strong> {{ user.mydelivery.address }} - {{ user.mydelivery.postalCode }} {{ user.mydelivery.city }}</p>

        <a href="{{ path('bdloc_app_subscribe_registerstep2') }}" class="btn btn-primary">Modifier mon point relais</a>
    {% else %}
        <p>Vous n'avez pas encore choisi de point relais.</p>

        <a href="{{ path('bdloc_app_subscribe_registerstep2') }}" class="btn btn-primary">Ajouter mon point relais</a>
    {% endif %}
    
<div class="clearfix"></div>

<h2>Paiement</h2>

<a href="" class="btn btn-warning pull-right">Modifier mes informations de paiement</a>

<div class="clearfix"></div>
<h2>Mon historique de location</h2>

<table class="" border='1' width="100%" cellpadding="1">
  <tr>
    <th class="">Bd</th>
    <th class="">Titre</th>
    <th class="">Série</th>
    <th class="">Tome</th>
    <th class="">Date location</th>
  </tr>
    {% for cart in carts %}
    {% for cartitem in cart.cartitem %}
    <tr>
        <td class=""><img src=" {{ asset('img/Couvertures_cart_thumbs/' ~ cartitem.book.cover) }} " alt="{{ cartitem.book.title }}" /></td>
        <td class=""><p>{{ cartitem.book.title }}</p></td>
        <td class=""><p>{{ cartitem.book.serie.title }}</p></td>
        <td class=""><p>{{ cartitem.book.num }}</p></td>
        <td class=""><p>{{ cartitem.dateCreated.date }}</p></td>
    </tr>
    {% endfor %}
    {% endfor %}


</table>

<div class="clearfix"></div>

<h2>Mes amendes</h2>








</div>


{% endblock %}



{% block javascripts %}



{% endblock %}

    
