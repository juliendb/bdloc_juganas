{% extends "layouts/base.html.twig" %}

{# titre de la page dans head #}
{% block title %} Editer mon profil | Bdloc {% endblock %}   


{# contenu du body #}

{% block main_content %}

<div class="clearfix"></div>

<div class="container ">
    <h1>Modifier mon profil</h1>



{{ form_start(editForm) }}
<div id="formRegister">
    <div class="champs">
   
        {{ form_row(editForm.firstname,  { 'attr':{'placeholder': 'Votre nom', 'class': 'champ_class'}}) }}
    </div>

    <div class="champs">
    
        {{ form_row(editForm.name,  { 'attr': {'placeholder': 'Votre prénom', 'class': 'champ_class'}}) }}
    </div>

    <div class="champs">
        {{ form_row(editForm.email,  { 'attr': {'placeholder': 'Votre email', 'class': 'champ_class'}}) }} 
    </div> 
    
    <div class="champs">
        {{ form_row(editForm.tel,  { 'attr': {'placeholder': 'Votre téléphone', 'class': 'champ_class'}}) }} 
    </div>

    <div class="champs">
        {{ form_row(editForm.name,  { 'attr': {'placeholder': 'Votre prénom', 'class': 'champ_class'}}) }} 
    </div>

    <div class="champs">
        {{ form_row(editForm.adress,  { 'attr': {'placeholder': 'Votre adresse', 'class': 'champ_class'}}) }}
    </div>

    <div class="champs">
        {{ form_row(editForm.postalCode,  { 'attr': {'placeholder': 'Votre code postal', 'class': 'champ_class'}}) }}
    </div>

    {{ form_row(editForm.submit,  { 'attr': {'name': 'Modifier', 'class': 'valider'}}) }}

</div>
{{ form_end(editForm) }}




</div>


{% endblock %}



    
