{% extends "layouts/base.html.twig" %}

{# titre de la page dans head #}
{% block title %} Editer mon profil | Bdloc {% endblock %}   


{# contenu du body #}

{% block main_content %}

<div class="clearfix"></div>

<div class="container editProfil">
    <h1>Modifier mon profil</h1>



 {{ form_start(editProfilForm) }}
    <div id="formRegister">
        <div class="champs">
       
            {{ form_row(editProfilForm.firstname,  { 'attr':{'placeholder': 'Votre nom', 'class': 'champ_class'}}) }}
        </div>

       
        <div class="champs">
            {{ form_row(editProfilForm.tel,  { 'attr': {'placeholder': 'Votre téléphone', 'class': 'champ_class'}}) }} 
        </div>

        <div class="champs">
            {{ form_row(editProfilForm.adress,  { 'attr': {'placeholder': 'Votre adresse', 'class': 'champ_class'}}) }}
        </div>

        <div class="champs">
            {{ form_row(editProfilForm.postalCode,  { 'attr': {'placeholder': 'Votre code postal', 'class': 'champ_class'}}) }}
        </div>

        {{ form_row(editProfilForm.submit,  { 'attr': {'name': 'Modifier', 'class': 'valider'}}) }}

    </div>

 {{ form_end(editProfilForm) }}


</div>


{% endblock %}



    
